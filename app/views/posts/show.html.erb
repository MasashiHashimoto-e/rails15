<h3>ユーザー詳細</h3>
<table>
  <tr>
    <th>名前</th>
    <td><%= @post.user_id %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.startday %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.finishday %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
          <% if @post.oneday === 'true' %>
          ⚪︎
          <% else @post.oneday === 'false' %>
           <% end %>
        </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
  </ul>
</div>