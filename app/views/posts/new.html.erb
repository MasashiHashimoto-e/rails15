<h3>ユーザー新規作成</h3>
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
        <th><%= f.label :user_id ,"名前" %></th>
        <td><%= f.text_field :user_id %></td>
    </tr>

    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>

    <tr>
        <th><%= f.label :startday ,"開始日" %></th>
        <td><%= f.date_field :startday %></td>
    </tr>

    <tr>
        <th><%= f.label :finishday ,"終了日" %></th>
        <td><%= f.date_field :finishday %></td>
    </tr>

    <tr>
        <th><%= f.label :oneday ,"終日" %></th>
        <td><%= f.check_box :oneday, {}, "true", "false" %><br>終日の場合はチェックを入れます</td>
    </tr>
    <tr>
        <th><%= f.label :memo ,"メモ欄" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>
   

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>